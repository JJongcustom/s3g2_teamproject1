<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ilinbun.mulcam.dao.BragDAO">
	<!-- 전체게시물 조회 : 1.전체 카운트  2.게시물 15개 한 화면에뽑기 -->
	 <select id="selectBragBoardCount" resultType="int">
 		<![CDATA[
 			select count(*) from honbab
 		]]>
 	</select>

	<select id="selectBragList" resultType="Bragboard" parameterType="int"  >
    	<![CDATA[
			select * from honbab order by date desc limit #{startrow},15
    	]]>
	</select>
	
	<!-- BEST : 조회수 순으로 1위(이달의혼밥) 출력.좋아요 순인데 나중에 바꾸기 -->	
	<select id="bragBest1" resultType="Bragboard">
		<![CDATA[
			SELECT * FROM honbab order by readCount desc LIMIT 1
		]]>
	</select>

	<!-- 하나의 게시물 정보 조회 -->
	<select id="selectBrag" resultType="Bragboard" parameterType="int">
    	<![CDATA[
			select * from honbab where articleNo=#{articleNo}
    	]]>
	</select>
	
	<!-- 게시글 조회수(+1) -->
	 <update id="updateReadCount" parameterType="int">
 		<![CDATA[
 			update honbab set readCount=readCount+1 where articleNo=#{articleNo} 
 		]]>
 	</update>


	<!-- 게시물 생성  -->	
	<insert id="insertBragBoard" parameterType="Bragboard">
 		<![CDATA[
 			insert into honbab (idx, moonpa, title, location, content)
 			
 			values (#{idx}, #{moonpa}, #{title}, #{location}, #{content})
 		]]>
 		
 	</insert>

	<!-- today게시물 수정 -->
	<update id="updateBragBoard" parameterType="Bragboard">
		<![CDATA[
		update honbab set moonpa = #{moonpa},
		title = #{title},
		location = #{location},
		content=#{content},
		where articleNo = #{articleNo}; 
		 ]]>
	</update>


	<!-- today 삭제 -->
	<delete id="deleteBragBoard" parameterType="int">
		<![CDATA[
		
		delete from honbab where articleNo=#{articleNo}
		 ]]>
	</delete>

